        <Button Content="-" Background="White" HorizontalAlignment="Center" Margin="285,255,0,130" VerticalAlignment="Center" Width="65" Click="Button_Click" Height="65" FontSize="40" Padding="1,-4,1,1"/>
        <Button Content="*" Background="White" HorizontalAlignment="Center" Margin="285,190,0,195" VerticalAlignment="Center" Width="65" Click="Button_Click" Height="65" FontSize="40" Padding="1,-4,1,1"/>
        <Button Content="/" Background="White" HorizontalAlignment="Center" Margin="285,125,0,260" VerticalAlignment="Center" Width="65" Click="Button_Click" Height="65" FontSize="40" Padding="1,-4,1,1"/>
        <Button Content="0" Background="White" HorizontalAlignment="Center" Margin="155,385,130,0" VerticalAlignment="Center" Width="65" Click="Button_Click" Height="65" FontSize="40" Padding="1,-4,1,1"/>
        <Button Content="=" Background="White" HorizontalAlignment="Center" Margin="90,385,195,0" VerticalAlignment="Center" Width="65" Click="Button_Click" Height="65" FontSize="40" Padding="1,-4,1,1"/>
        <Button Content="3" Background="White" HorizontalAlignment="Center" Margin="220,320,65,65" VerticalAlignment="Center" Width="65" Click="Button_Click" Height="65" FontSize="40" Padding="1,-4,1,1"/>
        <Button Content="6" Background="White" HorizontalAlignment="Center" Margin="220,255,65,130" VerticalAlignment="Center" Width="65" Click="Button_Click" Height="65" FontSize="40" Padding="1,-4,1,1"/>
        <Button Content="9" Background="White" HorizontalAlignment="Center" Margin="220,190,65,195" VerticalAlignment="Center" Width="65" Click="Button_Click" Height="65" FontSize="40" Padding="1,-4,1,1"/>
        <Button Content=")" Background="White" HorizontalAlignment="Center" Margin="220,125,65,260" VerticalAlignment="Center" Width="65" Click="Button_Click" Height="65" FontSize="40" Padding="1,-4,1,1"/>
        <Button Content="2" Background="White" HorizontalAlignment="Center" Margin="155,320,130,65" VerticalAlignment="Center" Width="65" Click="Button_Click" Height="65" FontSize="40" Padding="1,-4,1,1"/>
        <Button Content="5" Background="White" HorizontalAlignment="Center" Margin="155,255,130,130" VerticalAlignment="Center" Width="65" Click="Button_Click" Height="65" FontSize="40" Padding="1,-4,1,1"/>
        <Button Content="8" Background="White" HorizontalAlignment="Center" Margin="155,190,130,195" VerticalAlignment="Center" Width="65" Click="Button_Click" Height="65" FontSize="40" Padding="1,-4,1,1"/>
        <Button Content="(" Background="White" HorizontalAlignment="Center" Margin="155,125,130,260" VerticalAlignment="Center" Width="65" Click="Button_Click" Height="65" FontSize="40" Padding="1,-4,1,1"/>
        <Button Content="1" Background="White" HorizontalAlignment="Center" Margin="90,320,195,65" VerticalAlignment="Center" Width="65" Click="Button_Click" Height="65" FontSize="40" Padding="1,-4,1,1"/>
        <Button Content="4" Background="White" HorizontalAlignment="Center" Margin="90,255,195,130" VerticalAlignment="Center" Width="65" Click="Button_Click" Height="65" FontSize="40" Padding="1,-4,1,1"/>
        <Button Content="7" Background="White"  HorizontalAlignment="Center" Margin="90,190,195,195" VerticalAlignment="Center" Width="65" Click="Button_Click" Height="65" FontSize="40" Padding="1,-4,1,1"/>
        <Image   Source="icons/backspace_icon.png" HorizontalAlignment="Center" Margin="90,125,195,260" VerticalAlignment="Center" Width="65"  Height="65" />
    </Grid>
