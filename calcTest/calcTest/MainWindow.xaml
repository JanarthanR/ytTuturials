<Window x:Class="calcTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:calcTest"
        mc:Ignorable="d"
        Title="Calculator" 
        Height="450" Width="350" AllowsTransparency="True" WindowStyle="None"
        MinHeight="450" MinWidth="350">
    <Window.Background>
        <SolidColorBrush Opacity="0.95" Color="White"/>
    </Window.Background>
    <Grid>
        
        <Button Content="Button" HorizontalAlignment="Left" Margin="144,193,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <TextBox x:Name="numberTextBox" HorizontalAlignment="Left" Height="59" TextAlignment="Right" Margin="0,29,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="350" FontSize="20"/>
    </Grid>
</Window>
