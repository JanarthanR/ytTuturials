<Window x:Class="calcTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:calcTest"
        mc:Ignorable="d"
        Title="Calculator" 
        Height="450" Width="350" AllowsTransparency="True" WindowStyle="None"
        MinHeight="450" MinWidth="350">
    <Window.Background>
        <SolidColorBrush Opacity="0.95" Color="White"/>
    </Window.Background>
    <Grid>
        <TextBlock Text="Awesome Calculator" Margin="10,-1,146,422" FontSize="20" />
        <Button Content="=" Background="White" HorizontalAlignment="Center" Margin="285,385,0,0" VerticalAlignment="Center" Width="65" Click="Button_Click" Height="65" FontSize="40" Padding="1,-4,1,1"/>
        <TextBox x:Name="numberTextBox" HorizontalAlignment="Left" Height="91" TextAlignment="Right" Margin="0,29,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="350" FontSize="40"/>
        <Image HorizontalAlignment="Left" Height="15" Margin="329,6,6,6" VerticalAlignment="Top" Width="15" Source="icons/cancel_icon.png" MouseDown="closeCalculator" />
        <Button Content="." Background="White" HorizontalAlignment="Center" Margin="220,385,65,0" VerticalAlignment="Center" Width="65" Click="Button_Click" Height="65" FontSize="40" Padding="1,-4,1,1"/>
